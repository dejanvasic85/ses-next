{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "SES_AWS_ACCESS_KEY_ID",
        "SES_AWS_SECRET_ACCESS_KEY",
        "EMAIL_ENABLED",
        "EMAIL_FROM",
        "EMAIL_TO",
        "NEXT_PUBLIC_GTM_ID",
        "NEXT_PUBLIC_RECAPTCHA_SITE_KEY",
        "RECAPTCHA_SECRET_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type:check": {
      "cache": false,
      "dependsOn": ["^type:check"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
